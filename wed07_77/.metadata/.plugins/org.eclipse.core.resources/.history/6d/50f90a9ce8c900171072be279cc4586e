int color[12]={WHITE,CYAN,BLUE,RED,MAGENTA,LGRAY,GREEN,YELLOW,BROWN,BRRED,GRAY};
int main(){

	SystemInit();
	LCD_Init();
	Touch_Configuration();
	Touch_Adjust();
	LCD_Clear(WHITE);

	RCC_Config();
	GPIO_Config();
	NVIC_Config();
	ADC_Config();

	while(1){
	}
}
