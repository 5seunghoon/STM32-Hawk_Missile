int color[12]={WHITE,CYAN,BLUE,RED,MAGENTA,LGRAY,GREEN,YELLOW,BROWN,BRRED,GRAY};
int main(){

	SystemInit();
	LCD_Init();
	//Touch_Configuration();
	//Touch_Adjust();
	//TIM_Init();
	LCD_Clear(WHITE);
	RCC_Config();
	GPIO_Config();
	NVIC_Config();
	ADC_Config();
	DMA_Channel_Config();

	while(1){
		delay(10);
		LCD_ShowString(50, 50, "!WED 07!", BLACK, WHITE);
		printADCvalue(6);
	}
}
